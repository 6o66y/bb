<h1>index</h1>

<% @posts.each do |post| %>
  <div class="index_box">
  	<div class="index_post">
      <%= post.body %>
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-success' %>
      <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: '本当に削除しますか？'}, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
