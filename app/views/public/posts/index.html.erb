<h1 class="text-center">POSTs</h1>

<% @posts.each do |post| %>
  <div class="index_box col-md-4 col-md-offset-4">
  	<div class="index_post">
      <%= post.body %>

      <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: '本当に削除しますか？'}, class: 'btn btn-warning pull-right' %>
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-success pull-right' %>
    </div>
  </div>
<% end %>
